	<script type="text/javascript">
	const $main = document.getElementById('main');
	
	const add_kit = function(){
	      /* 자식 노드 추가 */
	      const $new = `<li>smartTV</li><li>오디오</li><li>Ipad</li><li>갤럭시</li>`;
	      
	      const $ul = document.createElement('ul');       // 새로운 요소 생성. - ul 태그
	      $ul.innerHTML = $new;
	      $main.appendChild($ul);
	      //생성된 요소의 css 스타일을 적용하는 방법.
	      $ul.className='item';
	      $ul.classList.add('item01');
	    }
	</script>
