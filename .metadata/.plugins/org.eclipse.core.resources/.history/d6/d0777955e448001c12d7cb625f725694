				<th width="10%">조회수</th>
				<th width="20%">작성일</th>
			</tr>
			<th:block th:each="vo : ${list}">
				<tr>
					<td>[[${vo.vidx}]]</td>
					<td>
					<a th:href="@{/videodetail?(vidx=${vo.vidx},page=${page.currentPage},category=${vo.category})}">[[${vo.subject}]]</a>
