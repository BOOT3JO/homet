        <tr class="text-center" th:each="vo : ${list}">
            <th scope="row">
                <span th:text="${vo.nickname}"></span>
            </th>
            <td>
                <a th:href="@{'/write/' + ${vo.nickname}}">
                    <span th:text="${vo.subject}"></span>
                </a>
            </td>
            <td>
                <span th:text="${vo.content}"></span>
            </td>
            <td>
                <span th:text="${#temporals.format(vo.reg_date, 'yyyy-MM-dd HH:mm')}"></span>
            </td>
        </tr>
