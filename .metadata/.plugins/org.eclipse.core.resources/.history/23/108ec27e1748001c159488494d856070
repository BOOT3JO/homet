	<h3>MEAT</h3>
	<div th:each="vo : ${list}">
		<button onclick="add_kit(${vo.name},${vo.price})">
			<div th:text="${vo.name}">상품명<div>
			<div th:text="${vo.price}">가격</div>
		<botton>
	</div>
	
	<div id="kitbox">
	
	</div>
	
	
	<script type="text/javascript">
	const $kitbox = document.getElementById('kitbox');
	
	const add_kit = function(name,price){
	      /* 자식 노드 추가 */
	      const $new = `<div>name price</div>`;
	      
	      const $div = document.createElement('div');       // 새로운 요소 생성. - ul 태그
	      $div.innerHTML = $new;
	      $kitbox.appendChild($div);
	      //생성된 요소의 css 스타일을 적용하는 방법.
	      $div.className='item';
	      $div.classList.add('item01');
	    }
	</script>
