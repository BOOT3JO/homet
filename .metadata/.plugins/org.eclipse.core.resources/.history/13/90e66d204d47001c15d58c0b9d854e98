				<tr>
					<td>[[${vo.idx }]]</td>
					<td>
						<a href="detail?idx=&page=">[[${vo.subject }]]</a>
					</td>
					<td th:text="${vo.nickname }"></td>
					<td th:text="${#calendars.format(vo.reg_date,'yyyy-MM-dd')}">]
					</td>
